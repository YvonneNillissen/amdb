<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @movie.title %>
</p>

<p>
  <b>Director:</b>
  <%= @movie.director.name %>
</p>

<p>
  <b>Year:</b>
  <%= @movie.year %>
</p>

<p>
  <b>Cast:</b>
  <ul>
    <% @movie.roles.each do |role| %>
      <li><%= role.actor.name %></li>
    <% end %>
  </ul>
</p>


<%= link_to 'Edit', edit_movie_path(@movie) %> |
